@page "/"
@inject Clypeus.Services.Interfaces.Medicinals.IDrugService drugService

    <div class="container">

       <Paging NumberOfResults=@Count ResultsPerPage="20" PageChanged="@PageChanged"></Paging>

        <h1>Drugs</h1>

        @if (drugs == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Atc</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var drug in drugs)
                    {
                        <tr>
                            <td>@drug.Code</td>
                            <td></td>
                            <td>@drug.Description</td>

                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>

@code {
    IEnumerable<Clypeus.DataTransfer.ViewModels.Generic.GenericViewModel> drugs;

    public int Count = 0;

    protected override async Task OnInitializedAsync()
    {
        drugs = await drugService.GetDrugs();
        Count = drugs.Count();

    }

    protected void PageChanged(int p)
    {
        System.Diagnostics.Debug.WriteLine("User Has Clicked: " + p);
    }
}






